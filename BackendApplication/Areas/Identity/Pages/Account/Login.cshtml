@page
@model LoginModel
<style>
    body{
        background: #780206; /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #061161, #780206); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #061161, #780206); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
    h1{
        color:white;
    }
    h2{
        color: white;
    }
</style>
@{
    ViewData["Title"] = "Log in";
}

@*<h1>@ViewData["Title"]</h1>
*@
<p>
    <h1>Join us </h1>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />

                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div style="color:white">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <br />
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary" style="background-color:#333399">Log in</button>
                    </div>
                    <br />
                    <div class="text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-secondary" style="background-color:#333399">Forgot your password?</a>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary" style="background-color:#333399">Register as a new user</a>

                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn btn-secondary" style="background-color:#333399">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-4 "></div>
        <div class="col-md-4 ">
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__wobble" src="/images/eCOM LOGO2.png" alt="AdminLTELogo" height="540px" width="640px">
            </div>

        </div>
    </div>
</div>
.


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
