<h1>Edit the Category</h1>
<div class="container">
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    @*<label asp-for="GenreName" class="control-label"></label>*@
                    <label class="form-label">Category Name </label>
                    <input asp-for="GenreName" class="form-control" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    @*<label asp-for="Description" class="control-label"></label>*@
                    <label class="form-label"> Description of the category </label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__wobble" src="/images/ComputerHW.png" alt="AdminLTELogo" height="540px" width="640px">
            </div>

        </div>
    </div>
</div>

