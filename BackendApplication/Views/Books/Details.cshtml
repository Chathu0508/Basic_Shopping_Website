@model BackendApplication.Models.Book


@{
}
@if (User.IsInRole("Admin"))
{
    <div>
        <br />

        <p>
            <a class="btn btn-secondary text-" href="/Books/Index"><i class="bi bi-skip-backward-fill"> </i> Back to Main page</a>
        </p>
    </div>


}
<br />

<h1 class="text-center">Product Details</h1>

<div class="container">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
@*            @Html.DisplayNameFor(model => model.Image)
            <label class="form-label">Image of the product </label>
*@        </dt>
        <dd class = "col-sm-10 text-center">
           @* @Html.DisplayFor(model => model.Image)*@
            @if (string.IsNullOrEmpty(Model.Image))
            {
                <img style="width:80%;height:200px" src="/images/NoImage.png" class="card-img-top" alt="...">

            }
            else
            {
                <img style="width:254px;height:300px" src="/images/@Model.Image" class="card-img-top align-items-center" alt="...">
            }

        </dd>

        <dt class = "col-sm-2">
           @* @Html.DisplayNameFor(model => model.BookName)*@
           <label class="form-label">Product Name</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.AuthorName)*@
            <label class="form-label">Product's Model type</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Genre)*@
            <label class="form-label">category Of the Product </label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreName)
        </dd>

        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Description)*@
            <label class="form-label">Product's Description</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Price)*@
            <label class="form-label">Price Of the Product </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price).00
        </dd>
    </dl>
</div>
<p>
    <a class="btn btn-secondary" href="/Home/Index"><i class="bi bi-skip-backward-fill"></i> Back to Home</a>
</p>



