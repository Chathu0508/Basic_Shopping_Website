@model IEnumerable<BackendApplication.Models.Book>

@{
  
}
<div>
    <br />
    <a class="btn btn-secondary" href="/Admin/Dashbaord"><i class="bi bi-skip-backward-fill"></i> Dashboard</a>

</div>
<br />

<h1>Product Tables Summary</h1>
<div>
    <p>
        @*<a asp-action="Create">Add New Product</a>*@
        <a class="btn btn-secondary btn-sm" href="/Books/Create" style="float: right"><i class="bi bi-file-plus"></i> Add New Product</a>
    </p>

</div>
<div>
    <table class="table table-striped table-bordered table-dark">
        <thead class="text-center">
            <tr>
                <th>
                @*@Html.DisplayNameFor(model => model.BookName)*@
                    Product Name
                </th>
                <th>
                @*@Html.DisplayNameFor(model => model.AuthorName)*@
                    Model
                </th>
                <th>
                @*@Html.DisplayNameFor(model => model.Description)*@
                    Producttion Decsription
                </th>
                <th>
                @*@Html.DisplayNameFor(model => model.Price)*@
                    Price
                </th>
                <th>
                @*@Html.DisplayNameFor(model => model.Image)*@
                    Image
                </th>
                <th>
                @*@Html.DisplayNameFor(model => model.Genre)*@
                    Category
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        Rs. @Html.DisplayFor(modelItem => item.Price).00
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Image)*@
                        @if (string.IsNullOrEmpty(item.Image))
                        {
                            <img style="width:80%;height:200px" src="/images/NoImage.png" class="card-img-top" alt="...">

                        }
                        else
                        {
                            <img style="width:254px;height:300px" src="/images/@item.Image" class="card-img-top align-items-center" alt="...">
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.GenreName)
                    </td>
                    <td >
                        <a asp-action="Details" asp-route-id="@item.Id" style="color:white" class="btn btn-success">
                            <i class="bi bi-file-bar-graph-fill" style="color:white"></i>
                        </a> |
                        <a asp-action="Edit" asp-route-id="@item.Id" style="color:white" class="btn btn-secondary">
                            <i class="bi bi-pencil" style="color:white"></i>
                        </a> |                        
                        <a asp-action="Delete" asp-route-id="@item.Id" style="color:white" class="btn btn-danger">
                            <i class="bi bi-trash2-fill" style="color:white"></i>
                        </a>


                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>


