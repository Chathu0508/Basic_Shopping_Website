@model IEnumerable<BackendApplication.Models.DTOs.OrderDetailsDto>

@{
}
<div>
    <br />
    <a class="btn btn-secondary" href="/Orders/Index"><i class="bi bi-skip-backward-fill"></i> Order page</a>

</div>
<br />
<h1>Order Detils summary</h1>

<table class="table table-striped table-bordered table-dark">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Book)*@
                Product name

            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Order)*@
                Order 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)

            </th>
            <th>
                status
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.BookName)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice).00
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
                </td>

        </tr>
}
    </tbody>
</table>
