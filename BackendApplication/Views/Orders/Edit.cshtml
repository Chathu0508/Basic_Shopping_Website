<h1>Edit the Order Status</h1> 
<div class=" container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    @*<label asp-for="UserId" class="control-label"></label>     *@               
                    <label class="form-label">Customer Email </label>

                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    @*<label asp-for="CreateDate" class="control-label"></label>*@
                    <label class="form-label">Order Create Date  </label>
                    <input asp-for="CreateDate" class="form-control" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                   @* <label asp-for="OrderStatusId" class="control-label"></label>*@
                   <label class="form-label">Order Status </label>
                    <select asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatusId"></select>
                    <span asp-validation-for="OrderStatusId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                    </label>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </form>
        </div>
                <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__wobble" src="/images/order.png" alt="AdminLTELogo" height="540px" width="640px">
            </div>

        </div>

    </div>

</div>

