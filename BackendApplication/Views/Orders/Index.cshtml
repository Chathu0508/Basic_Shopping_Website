@model IEnumerable<BackendApplication.Models.DTOs.OrdersDto>

@{
}
<div>
    <br />
    <a class="btn btn-secondary" href="/Admin/Dashbaord"><i class="bi bi-skip-backward-fill"></i> Dashboard</a>
</div>
<br />
<h1>Order Summary</h1>
<div class="container">
    <a class="btn btn-secondary" href="/OrderDetails/Index"><i class="bi bi-skip-forward-fill"></i> Order Deatails</a>
</div>
<br />
<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-dark">
            <thead class="text-center">
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.UserId)*@
                        Customer Email
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.CreateDate)*@
                        Order created date
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDeleted)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.OrderStatus)*@
                        Order Status
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.StatusName)
                        </td>
                        <td class="text-center">
                            @*<a asp-action="Details" asp-route-id="@item.Id" style="color:white" class="btn btn-success">
                                <i class="bi bi-file-bar-graph-fill" style="color:white"></i>
                            </a> |*@
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:white" class="btn btn-secondary">
                                <i class="bi bi-pencil" style="color:white"></i>
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" style="color:white" class="btn btn-danger">
                                <i class="bi bi-trash2-fill" style="color:white"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


